@model ShopNongsan.Models.Sanpham
@{
    ViewBag.Title = Model.tensanpham;

    Layout = "~/Views/_LayoutChitietSanpham.cshtml";
    ShopNongsan.Models.ShopNongsanEntities db = new ShopNongsan.Models.ShopNongsanEntities();
    var _danhmuc = db.DanhmucSanphams.Where(s => s.id_danhmuc == Model.id_danhmuc).FirstOrDefault().tendanhmuc;
}

<style>
    .para__content1 {
        display: none;
    }
</style>
<div style="display:block;">
    <div>
        @using (@Html.BeginForm("Themgiohang", "GiahangUsers", FormMethod.Post))
        {
            @*<a href="" hidden>@Html.TextBox("id_sanpham")</a>*@
            @*<a href="" hidden>@Html.TextBox("tensanpham")</a>*@
            @*<a href="" hidden>@Html.TextBox("img_sanpham")</a>*@
            @*<a href="" hidden>@Html.TextBox("giatien")</a>*@
            <div class="col-12">
                <div class="product-details">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="product-gallery-box m-b-60">
                                <div class="product-image--large overflow-hidden">
                                    <img class="product__img" src="data:image/jpg;base64,@Html.DisplayFor(model => model.img_sanpham)" name="img_sanpham" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product-details-box">
                                <h5 class="section-content__title"><label name="tensanpham">@Html.DisplayText("tensanpham")</label></h5>
                                <span class="text-reference">Danh mục: @_danhmuc</span>
                                <div class="review-box">
                                    <ul class="product__review m-t-10 m-b-15">
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--blank"><i class="icon-star"></i></li>
                                    </ul>
                                    <a href="#product-review" class="link--gray link--icon-left  m-b-5"><i class="fal fa-comment-dots"></i>Xem bình luận</a>
                                    <a href="#modalReview" data-toggle="modal" class="link--gray link--icon-left m-b-5"><i class="fal fa-edit"></i>Thêm bình luận</a>
                                </div>
                                <div class="product__price">
                                    <span class="product__price-del"><label name="giatien">Giá tiền: </label></span>
                                    <span class="product__price-reg">@Html.DisplayFor(model => model.giatien)</span>
                                </div>
                                <div class="product__desc m-t-25 m-b-30">
                                    <span class="product__price-del"><label name="giatien">Sản phẩm còn lại: </label></span>
                                    <span class="product__price-reg">@Html.DisplayFor(model => model.soluong)</span>
                                </div>
                                <div class="product-var p-t-30">


                                    <div class="product-quantity product-var__item">
                                        <span class="product-var__text">Số lượng</span>
                                        <div class="product-quantity-box">
                                            <div class="quantity">
                                                <input type="number" name="soluong" id="soluong" min="1" max="@Html.DisplayFor(model => model.soluong)" step="1" value="1">
                                            </div>
                                            @*  @Html.ActionLink("Theem san pham", "AddtoCart", "GiohangAddItem", new { id = @Html.DisplayFor(model => model.id_sanpham) })*@
                                            @{
                                                if (ViewBag.trangthai == 1)
                                                {
                                                    <input type="submit" value="Thêm giỏ hàng" class="btn btn-outline-success" />
                                                }
                                                else
                                                {
                                                    <input type="text" value="Đã dừng bán" class="btn btn-outline-danger" disabled />
                                                }

                                            }

                                            @*   <a href="/GiohangAddItem/AddtoCart/3" data-toggle="modal" data-dismiss="modal" class="btn btn--box btn--small btn--blue btn--uppercase btn--weight m-l-20">Thêm vào giỏ hàng</a>*@
                                            @*<input type="submit" value="Thêm giỏ hàng" class="btn btn-outline-success" />*@
                                        </div>

                                    </div>
                                </div>
                                <div class="product-links ">
                                    <div class="product-social m-tb-30">
                                        <span>Share</span>
                                        <ul class="product-social-link">
                                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                                            <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End Product Details Gallery -->

        }










        <div class="col-12">
            <div class="product product--1 border-around product-details-tab-area">
                <div class="row">
                    <div class="col-12">
                        <div class="section-content--border">
                            <ul class="tablist tablist--style-black tablist--style-title tablist--style-gap-70 nav">
                                <li><a class="nav-link active" data-toggle="tab" href="#product-desc">THÔNG TIN SẢN PHẨM</a></li>
                                @*<li><a class="nav-link " data-toggle="tab" href="#product-dis">Product Details</a></li>*@
                                <li><a class="nav-link" data-toggle="tab" href="#product-review">ĐÁNH GIÁ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-12" style="height: 293px; overflow-x: hidden; overflow-y: scroll;">
                        <div class="product-details-tab-box m-t-50">
                            <div class="tab-content">
                                <!-- Start Tab - Product Description -->
                                <div class="tab-pane show active" id="product-desc">
                                    <div class="para__content">

                                        <p class="para__text"> @Html.DisplayFor(model => model.mota)</p>

                                    </div>
                                </div>

                                <!-- Start Tab - Product Review -->
                                <div class="tab-pane " id="product-review">
                                    <!-- Start - Review Comment -->
                                    <a style=" position: sticky; top: 0; right: 0;margin-bottom:20px;" href="#modalReview" data-toggle="modal" class="btn btn--box btn--small btn--blue btn--uppercase btn--weight">THÊM ĐÁNH GIÁ</a>
                                    <ul class="comment">
                                        @{
                                            foreach (var item in ViewBag.danhgia)
                                            {

                                                int id_nguoi = item.id_nguoidung;
                                                var nguoi_danhgia = db.Nguoidungs.Where(s => s.id_nguoidung == id_nguoi).FirstOrDefault();
                                                <!-- Start - Review Comment list-->
                                                <li class="comment__list">
                                                    <div class="comment__wrapper">

                                                        <div class="comment__img">
                                                            <img class="product__img" src="data:image/jpg;base64,@nguoi_danhgia.anh_daidien" />
                                                        </div>
                                                        <div class="comment__content">
                                                            <div class="comment__content-top">
                                                                <div class="comment__content-left">
                                                                    <h6 class="comment__name">@nguoi_danhgia.ho @nguoi_danhgia.ten</h6>
                                                                    @*<ul class="product__review">
                <li class="product__review--fill"><i class="icon-star"></i></li>
                <li class="product__review--fill"><i class="icon-star"></i></li>
                <li class="product__review--fill"><i class="icon-star"></i></li>
                <li class="product__review--fill"><i class="icon-star"></i></li>
                <li class="product__review--blank"><i class="icon-star"></i></li>
            </ul>*@
                                                                    @*href="/Nguoidungs/Suabinhluan/@item.id_danhgia"*@
                                                                </div>
                                                                @{
                                                                    if (nguoi_danhgia.id_nguoidung == Convert.ToInt32(Session["User_Id"]))
                                                                    {
                                                                        <div class="comment__content-right">
                                                                                                                                            <a class="link--gray link--icon-left m-b-5" onclick="getElementById('@item.id_danhgia').style.display= 'flex'"><i class="fas fa-reply"></i>Sửa bình luận</a>
                                                                        </div>
                                                                    }
                                                                }

                                                            </div>
                                                            <div class="para__content1" id="@item.id_danhgia">
                                                                <form action="/Nguoidungs/Suabinhluan/@item.id_danhgia" method="post">
                                                                    <input style="border: 0; border-bottom: 2px solid gray; width: 447px" type="text" name="noidung" id="noidung" value="" />
                                                                    <input type="submit" style="" class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" name="name" value="Lưu" />
                                                                </form>
                                                            </div>
                                                            <div class="para__content">
                                                                <p class="para__text">@item.noidung</p>
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <!-- Start - Review Comment Reply-->

                                                </li>
                                                <!-- End - Review Comment list-->
                                            }
                                        }


                                    </ul>
                                    <!-- End - Review Comment -->

                                </div>  <!-- Start Tab - Product Review -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
    <!-- Start Modal Review cart -->
    <div class="modal fade" id="modalReview" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center">Nhận xét mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="modal-review-img">
                                    <img class="product__img" src="data:image/jpg;base64,@Html.DisplayFor(model => model.img_sanpham)" name="img_sanpham" />
                                </div>
                                <span class="modal__product-title m-t-25">@Html.DisplayFor(model => model.tensanpham)</span>
                                <div class="product__desc m-t-15">
                                    <p>@Html.DisplayFor(model => model.mota)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6>Thêm mới nhận xét</h6>
                                <div class="review-box">
                                    <span>Đánh giá sao</span>
                                    <ul class="product__review">
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--fill"><i class="icon-star"></i></li>
                                        <li class="product__review--blank"><i class="icon-star"></i></li>
                                    </ul>
                                </div>
                                <!--Đánh giá-->
                                <form action="~/Nguoidungs/Danhgia/@Html.DisplayFor(model => model.id_sanpham)" method="post" class="form-box">
                                    <div class="form-box__single-group">
                                        <label for="form-review">Đánh giá</label>
                                        <textarea id="form-review" rows="5" name="text_danhgia" placeholder="Chia sẻ thêm thông tin sản phẩm"></textarea>
                                    </div>
                                    <div class="from-box__buttons d-flex justify-content-between d-flex-warp m-t-25 align-items-center">
                                        <div class="form-box-right">
                                            <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" type="submit">Gửi đánh giá</button>
                                            or
                                            <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" type="button" data-dismiss="modal" aria-label="Close">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Modal Quickview cart -->


</div>
<div class="col-12">
    <!-- ::::::  Start  Product Style - Default Section  ::::::  -->
    <div class="product product--1 swiper-outside-arrow-hover">
        <div class="row">
            <div class="col-12">
                <div class="section-content section-content--border d-flex align-items-center justify-content-between">
                    <h5 class="section-content__title">SẢN PHẨM TƯƠNG TỰ</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="swiper-outside-arrow-fix pos-relative">
                    <div class="product-default-slider-5grid overflow-hidden  m-t-50">
                        <div class="swiper-wrapper">
                            <!-- Start Single Default Product -->
                            @{
                                foreach (var item in ViewBag.Sanphamtuongtu)
                                {
                                    <div class="product__box product__box--default  swiper-slide text-center">
                                        <div class="product__img-box">
                                            <a href="/SanphamShop/Details/@item.id_sanpham" class="product__img--link">
                                                <img class="product__img" src="data:image/jpg;base64,@item.img_sanpham" />
                                            </a>
                                            @*<a href="#modalAddCart" data-toggle="modal" class="btn btn--box btn--small btn--gray btn--uppercase btn--weight btn--hover-zoom product__upper-btn">Add to cart</a>
                                                <span class="product__tag product__tag--discount">-12%</span>
                                                <a href="wishlist.html" class="product__wishlist-icon"><i class="icon-heart"></i></a>*@
                                        </div>
                                        <div class="product__price m-t-10">
                                            @*<span class="product__price-del">@item.giatien</span>*@
                                            <span class="product__price-reg">@item.giatien</span>
                                        </div>
                                        <a href="/SanphamShop/Details/@item.id_sanpham" class="product__link product__link--underline product__link--weight-light m-t-15">
                                            @item.tensanpham
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                        <div class="swiper-buttons">
                            <!-- Add Arrows -->
                            <div class="swiper-button-next default__nav default__nav--next"><i class="fal fa-chevron-right"></i></div>
                            <div class="swiper-button-prev default__nav default__nav--prev"><i class="fal fa-chevron-left"></i></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div> <!-- ::::::  End  Product Style - Default Section  ::::::  -->
</div>
<div style="padding-bottom: 74px; height: 20px; width: 100%; min-height: 30px; ">

</div>
