@model IEnumerable<ShopNongsan.Models.Nguoidung>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Theme_shop/Theme_login/style.css" />
    <title>Sign in & Sign up Form </title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                @{
                    using (Html.BeginForm("Login", "Nguoidungs", null, FormMethod.Get, new { @class = "sign-in-form" }))
                    {
                        //  @Html.AntiForgeryToken()
                        @*<form action="Login" class="sign-in-form">*@
                        <h2 class="title">Đăng nhập</h2>
                        <h6 style="color:red">@TempData["Login_thatbai"] </h6>
                        <h5 style="color: #fb0404">@TempData["LoginSuccess"]</h5>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Username" name="gmail" id="gmail"  required />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Password" name="matkhau" id="matkhau"  required />
                        </div>
                        <input type="submit" value="Login" class="btn solid" />
                         <a href="/Sanphams/Index">Trang chủ</a>
                        <p class="social-text">Or Sign in with social platforms</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                        @*</form>*@
                    }
                }
                @{
                    using (Html.BeginForm("SignUp", "Nguoidungs", null, FormMethod.Get, new { @class = "sign-up-form" }))
                    {

                        @*<form action="#" class="sign-up-form">*@
                        <h2 class="title">Đăng ký</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Họ" name="ho" id="ho" required  />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Tên" name="ten" id="ten" required />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="tel" placeholder="Số diện thoại" name="sdt" id="sdt" pattern="[0-9]{10}" maxlength="10" required title="11 số và không chứa ký tự đặc biệt" />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-envelope"></i>
                            <input type="email" placeholder="Email" name="gmail" id="gmail" required title="Bạn chưa nhập Gmail" />
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Password (6-20)" name="matkhau" id="matkhau" required pattern="[0-9a-zA-Z]{6,}" title="Chỉ chứa chữ và số" maxlength="20" />
                        </div>
                        <input type="submit" class="btn" value="Sign up" />
                        <p class="social-text">Or Sign up with social platforms</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                        @*</form>*@
                    }
                }

            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Tôi chưa có tài khoản</h3>
                    <p>
                       Hãy tạo mới ở đây
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/Theme_shop/Theme_login/img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Tôi đã có tài khoản</h3>
                    <p>
                      Vậy hãy đăng nhập ở đây
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/Theme_shop/Theme_login/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/Theme_shop/Theme_login/app.js"></script>
</body>
</html>
