@model ShopNongsan.Models.Magiamgia

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


}

<div>
    @*@Html.ActionLink("Quay lại", "Index")*@
    <a href='@Url.Action("Index")'>
        <i class="fas fa-backward"> Quay lại</i>
    </a>
</div>
<div class=" chia-khoi">
    @using (Html.BeginForm("Create", "Magiamgias", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Tạo mã giảm giá</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tạo Mã
                <div class="col-md-10">
                    @Html.EditorFor(model => model.magiamgia1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.magiamgia1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Đơn giá
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dongia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dongia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Tên mã
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenmagiamgia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenmagiamgia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số lượng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.soluong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create"class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }
</div>